@*using SchoolReports.Web.Models.Student*@
@model SchoolReports.Web.ViewModels.Student.StudentEditVM
@section Scripts{
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<div class="col-xl-8 col-lg-10 col-md-12 align-content-start">
    <div class="card">
        <h5 class="card-header">
            Edit student details
        </h5>
        <p></p>
        <div class="card-body">
            <form asp-controller="Student" asp-action="Edit" method="post">
                <input hidden asp-for="Id" />
                <div class="form-group row">
                    <label asp-for="Forename" class="font-weight-bold"></label>
                    <input asp-for="Forename" class="form-control" />
                    <span asp-validation-for="Forename" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    <label asp-for="Surname"></label>
                    <input asp-for="Surname" class="form-control" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="@Model.TeachingGroup"></label>
                    <select asp-for="@Model.TeachingGroup.Id" asp-items="@Model.TeachingGroupSelectList" class="form-control"></select>
                    <span asp-validation-for="TeachingGroup" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    <label asp-for="Gender"></label>
                    <select asp-for="Gender" asp-items="@Model.Genders" class="form-control"></select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>

                <div class="form-group row">
                    <label asp-for="DOB"></label>
                    <input asp-for="DOB" type="date" class="form-control" />
                    <span asp-validation-for="@Model.DOB" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary btn-sm" />
                    <a asp-controller="Student" asp-action="Index" class="btn btn-secondary btn-sm ml-2">Cancel</a>
                </div>

            </form>
        </div>
    </div>
</div>