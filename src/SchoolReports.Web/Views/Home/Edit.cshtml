@*using ReportWriter.Models.Student*@
@model ReportWriter.Models.Student.StudentEditViewModel
@section Scripts{
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
<div class="mt-3">
    <div>
        <h2>Edit student details</h2>
        <p>
            Make any edits to the selected student details and press 'Save' to
            store or 'Cancel' to exit without saving.
        </p>
    </div>
    <div class="jumbotron">
        <form asp-controller="Home" asp-action="Edit" method="post">
            <input hidden asp-for="Id" />
            <div class="form-group row">
                <label asp-for="Forename"></label>
                <input asp-for="Forename" class="form-control" />
                <span asp-validation-for="Forename" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <label asp-for="Surname"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="@Model.TeachingGroup"></label>
                <select asp-for="@Model.TeachingGroup.Id" asp-items="@Model.SelectList" class="form-control"></select>
                <span asp-validation-for="TeachingGroup" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <label asp-for="Gender"></label>
                <select asp-for="Gender" asp-items="@Model.Genders" class="form-control"></select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <label asp-for="DOB"></label>
                <input asp-for="DOB" type="date" class="form-control" />
                <span asp-validation-for="@Model.DOB" class="text-danger"></span>
            </div>


            <div class="form-inline">
                <input type="submit" value="Save" class="btn btn-primary btn-sm" />
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-sm">Cancel</a>
            </div>
        </form>
    </div>
</div>
